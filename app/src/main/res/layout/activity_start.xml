<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="@dimen/padding"
    android:paddingLeft="@dimen/padding"
    android:background="@drawable/chronicle_background"
    tools:context="com.android.dev.qrcoursedorientation.presentation.activity.StartActivity">




    <Button
        android:id="@+id/restartCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_large"
        android:text="@string/text_restart_button"
        android:textSize="@dimen/text_size"
        android:textAllCaps="false"
        android:textColor="#000"
        android:alpha="0.7"
        android:background="@drawable/button_shape"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@id/buttonRunCourse"
        />

    <Button
        android:id="@+id/buttonRunCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_middle"
        android:text="@string/text_run_button"
        android:textSize="@dimen/text_size"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:alpha="0.7"
        android:background="@drawable/button_shape"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@id/buttonChronicle"/>

    <Button
        android:id="@+id/buttonChronicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/text_chronicle_button"
        android:textSize="@dimen/text_size"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:alpha="0.7"
        android:layout_marginBottom="@dimen/margin_middle"
        android:background="@drawable/button_shape"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toTopOf="@id/buttonCreateCourse"/>


    <Button
        android:id="@+id/buttonCreateCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/margin_large"
        android:background="@drawable/button_shape"
        android:foreground="?attr/selectableItemBackground"
        android:text="@string/text_create_button"
        android:textSize="@dimen/text_size"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>
