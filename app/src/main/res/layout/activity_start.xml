<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:background="@drawable/chronicle_background"
    tools:context="com.android.dev.qrcoursedorientation.presentation.activity.StartActivity">

    <Button
        android:id="@+id/restartCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:text="Reprendre une course"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="#000"
        android:alpha="0.7"
        android:background="@drawable/button_shape"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@id/buttonRunCourse"
        />

    <Button
        android:id="@+id/buttonRunCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="Lancer une course"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="#000"
        android:alpha="0.7"
        android:background="@drawable/button_shape"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toTopOf="@id/buttonChronicle"/>

    <Button
        android:id="@+id/buttonChronicle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mes courses"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="#000"
        android:alpha="0.7"
        android:layout_marginBottom="16dp"
        android:background="@drawable/button_shape"
        android:foreground="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintBottom_toTopOf="@id/buttonCreateCourse"/>


    <Button
        android:id="@+id/buttonCreateCourse"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="64dp"
        android:background="@drawable/button_shape"
        android:foreground="?attr/selectableItemBackground"
        android:text="CrÃ©er un parcours"
        android:textSize="16sp"
        android:textAllCaps="false"
        android:textColor="#000"
        android:alpha="0.7"
        app:layout_constraintBottom_toBottomOf="parent"/>


</android.support.constraint.ConstraintLayout>
